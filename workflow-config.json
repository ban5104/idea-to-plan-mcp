{
  "name": "Idea to Project Builder",
  "version": "1.0.0",
  "description": "Workflow for processing ideas through plan creation, PLANNING.md tuning, and CLAUDE.md building. Files are created in the user's current working directory.",
  "steps": [
    {
      "id": "idea-to-plan",
      "name": "Idea to Plan Agent",
      "file": "agents/01-idea-to-plan/instructions.md",
      "outputs": ["initial-plan.md"],
      "canSkip": false
    },
    {
      "id": "planning-tuner",
      "name": "PLANNING.md Tuner Agent", 
      "file": "agents/02-planning-tuner/instructions.md",
      "requires": ["idea-to-plan"],
      "outputs": ["PLANNING.md"]
    },
    {
      "id": "claude-builder",
      "name": "CLAUDE.md Builder Agent",
      "file": "agents/03-claude-builder/instructions.md", 
      "requires": ["planning-tuner"],
      "outputs": ["CLAUDE.md", "PLANNING.md", "build-prompt.txt", "project-ready-package.json"]
    }
  ]
}